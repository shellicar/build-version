{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["esnext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
