{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM"],
    "moduleResolution": "bundler",
    "module": "ES2022",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "skipLibCheck": true,
    "composite": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
